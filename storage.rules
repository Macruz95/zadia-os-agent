rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // User profile images - users can only access their own files
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Tenant-scoped files - organized by tenant
    match /tenants/{tenantId}/{allPaths=**} {
      // For now, allow authenticated users to access tenant files
      // In production, validate tenant membership via custom claims or Firestore lookup
      allow read, write: if isAuthenticated();
    }
    
    // Project files - organized under tenants
    match /projects/{projectId}/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Client files - organized under tenants
    match /clients/{clientId}/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Invoice/Quote attachments
    match /invoices/{invoiceId}/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    match /quotes/{quoteId}/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Temp uploads - authenticated users for their own temp files only
    match /temp/{userId}/{allPaths=**} {
      allow read, write, delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Public assets (logos, etc) - read-only
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default deny for any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}