rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para el DTO (Gemelo Digital de la Organización)
    // Permitir lectura/escritura solo para usuarios autenticados
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Reglas específicas para colecciones críticas (ej. usuarios, proyectos)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /projects/{projectId} {
      allow read, write: if request.auth != null;
      // TODO: Agregar reglas más específicas basadas en roles
    }

    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }

    // Reglas para agentes IA (futuro)
    match /agents/{agentId} {
      allow read, write: if request.auth != null;
    }
  }
}
