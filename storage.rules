rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper to check file size (max 10MB)
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Helper to check allowed content types
    function isValidContentType() {
      return request.resource.contentType.matches('image/.*') ||
             request.resource.contentType.matches('application/pdf') ||
             request.resource.contentType.matches('application/vnd.openxmlformats.*') ||
             request.resource.contentType.matches('application/msword') ||
             request.resource.contentType.matches('text/.*');
    }
    
    // User profile images - users can only access their own files
    match /users/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId && isValidFileSize();
    }
    
    // Tenant-scoped files - organized by tenant
    // NOTE: Full tenant membership validation requires custom claims or Cloud Functions
    // For production, implement custom claims with tenantIds array
    match /tenants/{tenantId}/{allPaths=**} {
      // Read: authenticated users (tenant validation should be done via custom claims in production)
      allow read: if isAuthenticated();
      // Write: authenticated with file validation
      allow write: if isAuthenticated() && isValidFileSize() && isValidContentType();
    }
    
    // Project files - should be nested under tenants in production
    match /projects/{projectId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidFileSize() && isValidContentType();
    }
    
    // Client files - should be nested under tenants in production
    match /clients/{clientId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidFileSize() && isValidContentType();
    }
    
    // Invoice/Quote attachments
    match /invoices/{invoiceId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidFileSize() && isValidContentType();
    }
    
    match /quotes/{quoteId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidFileSize() && isValidContentType();
    }
    
    // Temp uploads - authenticated users for their own temp files only
    match /temp/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId && isValidFileSize();
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Public assets (logos, etc) - read-only
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default deny for any other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}